<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.vvmp.coinprediction.vm.GameVM"/>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="400dp"
        android:weightSum="1.7"
        android:padding="@dimen/screen_margin"
        android:layout_height="160dp">

        <TextView
            android:id="@+id/title"
            style="@style/CoinTheme.Title.TextTitle2"
            app:userTurn="@{viewModel}"
            tools:text="JohnJohn's turn"
            android:gravity="center"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="@color/coinBlue"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="0dp">
            <TextView
                android:layout_weight="1"
                style="@style/CoinTheme.Body"
                android:id="@+id/action_head"
                android:text="@string/action_heads"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights"/>
            <TextView
                android:gravity="center_horizontal|center_vertical"
                style="@style/CoinTheme.Body"
                android:layout_weight="1"
                android:id="@+id/action_tails"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/action_tails"/>
        </LinearLayout>

    </LinearLayout>
</layout>