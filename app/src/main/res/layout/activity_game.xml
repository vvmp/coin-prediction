<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.vvmp.coinprediction.vm.GameVM"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/screen_margin"
        tools:context=".view.GameActivity">

        <TextView
            android:layout_width="wrap_content"
            style="@style/CoinTheme.Body"
            android:text="@{viewModel.playerOneName}"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/score_player_one"
            app:layout_constraintEnd_toEndOf="@+id/score_player_one"
            app:layout_constraintStart_toStartOf="@+id/score_player_one"
            tools:text="JohnJack"
            android:id="@+id/name_player_one"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CoinTheme.Body"
            android:text="@{viewModel.playerTwoName}"
            tools:text="JohnJack"
            android:id="@+id/name_player_two"
            app:layout_constraintBottom_toTopOf="@+id/score_player_two"
            app:layout_constraintEnd_toEndOf="@+id/score_player_two"
            app:layout_constraintStart_toStartOf="@+id/score_player_two"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CoinTheme.Body"
            app:scoreEdt="@{viewModel.scoreInfo.scorePlayerOne}"
            android:textSize="@dimen/c_text_title_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/score_player_one"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CoinTheme.Body"
            app:scoreEdt="@{viewModel.scoreInfo.scorePlayerTwo}"
            android:textSize="@dimen/c_text_title_1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/score_player_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_state"
            android:layout_width="wrap_content"
            tools:text="Flipping state"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/coin_image"
            android:visibility="gone"
            android:src="@drawable/coin_indian_ten_rupee_heads"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>